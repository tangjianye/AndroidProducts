<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_base_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/android_margin_middle"
        android:layout_marginRight="@dimen/android_margin_middle"
        android:layout_marginTop="@dimen/android_margin_middle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_record_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/label_ra_title_defaut"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_record_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/android_margin_normal"
            android:gravity="center_horizontal"
            android:text="@string/label_ra_title_defaut"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/txt_record_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/android_margin_middle"
            android:text="@string/label_ra_content_defaut"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_middle" />

    </LinearLayout>

</LinearLayout>

