<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="hospital"
            type="cn.aorise.sample.module.network.entity.response.Hospital"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wheat"
        android:layout_margin="@dimen/aorise_margin_micro"
        android:orientation="vertical"
        android:padding="@dimen/aorise_padding_big">

        <TextView
            android:id="@+id/txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@{hospital.hospitalId}"/>

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@{hospital.hospitalName}"/>
    </RelativeLayout>
</layout>