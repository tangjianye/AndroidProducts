<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="cn.aorise.sample.ui.activity.MainActivity">

        <include layout="@layout/aorise_include_toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <Button
                android:id="@+id/btn_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_title_activity_image"/>

            <Button
                android:id="@+id/btn_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_title_activity_net"/>

            <Button
                android:id="@+id/btn_database"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_title_activity_db"/>

            <Button
                android:id="@+id/btn_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_title_activity_list_db"/>

            <Button
                android:id="@+id/btn_list_net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_title_activity_list_net"/>

            <Button
                android:id="@+id/btn_web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_title_activity_webview"/>

            <Button
                android:id="@+id/btn_crash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_title_activity_crash"/>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>