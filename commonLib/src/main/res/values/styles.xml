<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:textSize">@dimen/font_size_small</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="@android:windowAnimationStyle">@style/AoriseAnimationActivity</item>
    </style>

    <style name="AppTheme.FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AoriseAnimationActivity">
        <item name="android:activityOpenEnterAnimation">@anim/aorise_push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/aorise_push_static</item>
        <item name="android:activityCloseEnterAnimation">@anim/aorise_push_static</item>
        <item name="android:activityCloseExitAnimation">@anim/aorise_push_right_out</item>
    </style>

    <style name="AoriseCustomTabLayout" parent="Widget.Design.TabLayout">
        <!--<item name="tabIndicatorColor">@color/blue</item>-->
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/ivory</item>
        <!--<item name="tabSelectedTextColor">@color/royalblue</item>-->
        <item name="android:textSize">@dimen/aorise_font_size_micro</item>
        <!--<item name="android:textColor">@color/grey</item>-->
        <item name="textAllCaps">true</item>
    </style>
</resources>
